    <!-- Cross Hatch Pattern -->
    <DrawingBrush x:Key="CrossHatchTileBrush" 
                  TileMode="Tile" 
                  Viewport="0,0,20,20" 
                  ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <!-- Background -->
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,20,20"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <SolidColorBrush Color="#FCFCFC"/>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>
                <!-- Diagonal lines -->
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <!-- Forward diagonal -->
                            <LineGeometry StartPoint="0,0" EndPoint="20,20"/>
                            <!-- Backward diagonal -->
                            <LineGeometry StartPoint="20,0" EndPoint="0,20"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Pen>
                        <Pen Brush="#F0F0F0" Thickness="0.5"/>
                    </GeometryDrawing.Pen>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <!-- Brick Pattern -->
    <DrawingBrush x:Key="BrickTileBrush" 
                  TileMode="Tile" 
                  Viewport="0,0,60,30" 
                  ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <!-- Background -->
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,60,30"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <SolidColorBrush Color="#F7F7F7"/>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>
                <!-- First row of bricks -->
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="2,2,26,11"/>
                            <RectangleGeometry Rect="32,2,26,11"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <SolidColorBrush Color="#EEEEEE"/>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>
                <!-- Second row of bricks (offset) -->
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="-13,17,26,11"/>
                            <RectangleGeometry Rect="17,17,26,11"/>
                            <RectangleGeometry Rect="47,17,26,11"/>
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <SolidColorBrush Color="#EEEEEE"/>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>
</ResourceDictionary>