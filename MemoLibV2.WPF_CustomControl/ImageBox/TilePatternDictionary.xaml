                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Subtle Grid Tile Pattern -->
    <DrawingBrush x:Key="GridTileBrush" 
                  TileMode="Tile" 
                  Viewport="0,0,20,20" 
                  ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <!-- First square (top-left) - Light color -->
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,0,10,10"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <SolidColorBrush Color="#F5F5F5"/>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>

                <!-- Second square (top-right) - Dark color -->
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="10,0,10,10"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <SolidColorBrush Color="#EEEEEE"/>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>

                <!-- Third square (bottom-left) - Dark color -->
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="0,10,10,10"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <SolidColorBrush Color="#EEEEEE"/>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>

                <!-- Fourth square (bottom-right) - Light color -->
                <GeometryDrawing>
                    <GeometryDrawing.Geometry>
                        <RectangleGeometry Rect="10,10,10,10"/>
                    </GeometryDrawing.Geometry>
                    <GeometryDrawing.Brush>
                        <SolidColorBrush Color="#F5F5F5"/>
                    </GeometryDrawing.Brush>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

